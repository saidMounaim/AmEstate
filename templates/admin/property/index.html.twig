{% extends 'admin/base.html.twig' %}

{% block title %}AmEstate | Property Manager{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% block body %}

<div class="content-wrapper">
    <h3 class="page-heading mb-4">Property</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <a href="#" class="btn btn-primary mb-3 float-left" >Add Property</a>
                    <div class="table-responsive">
                        <table class="table center-aligned-table" id="example">
                            <thead>
                                <tr class="text-primary">
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for property in properties %}
                                <tr class="">
                                    <td>{{property.id}}</td>
                                    <td>{{property.title}}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary btn-sm">{{property.statusProperty}}</a>
                                    </td>
                                    <td>${{property.fixPrice}}</td>
                                    <td>
                                        <a href="{{path('property_show',{'slug':property.slug})}}" class="btn btn-success btn-sm">
                                            <i class="fa fa-eye" ></i>
                                        </a>
                                        <a href="#" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>                        
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script>
$(document).ready(function() {
    $('#example').DataTable({
        "autoWidth": false,
        "lengthChange": false,
        "pageLength": 6
    });
});
</script>
{% endblock %}