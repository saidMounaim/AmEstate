{% block _property_images_widget %}

    <p>Here you can add images properties!</p>

    {{ form_widget(form) }}
    <input type="hidden" id="counter-input" value="0">
    <div class="form-group">
        <button type="button" id="btn-addimage" class="btn btn-primary">Add Images</button>
    </div>
{% endblock %}

{% block _property_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _property_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.imageFile) }}
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <span data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</span>
            </div>
        </div>
    </div>
{% endblock %}