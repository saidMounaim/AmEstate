{% extends 'base.html.twig' %}

{% block title %}AmEstate | Edit Agent{% endblock %}

{% block stylesheets %}
    <style>
        .vich-image img {
            width: 89px;
            height: 50px;
            position: absolute;
            right: -157px;
        }
    </style>
{% endblock %}

{% block body %}
    <!--/ Intro Single star /-->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">Edit Agent</h1>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="{{path('homepage')}}">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Edit Agent
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!--/ Intro Single End /-->

    <!--/ Agent Edit /-->
    <section class="agent-edit nav-arrow-b">
        <div class="container">
            <div class="row">
                {{form_start(form,{'attr':{'class':'form-a','style':'width:100%'}})}}
                <div class="col-md-12">
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{form_row(form.fullName)}}
                        </div>
                        <div class="form-group col-md-6">
                            {{form_row(form.email)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            {{form_row(form.description)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{form_row(form.phone)}}
                        </div>
                        <div class="form-group col-md-6">
                            {{form_row(form.skype)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-8">
                            <label for="">Avatar</label>
                            {{form_row(form.imageFile)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-a">Edit Agent</button>
                    </div>
                </div>
                {{form_end(form)}}
            </div>
        </div>
    </section>
{% endblock %}
